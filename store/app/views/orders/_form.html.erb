<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :cart_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :cart_id, Cart.all, :id, :user_id, {} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :required_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :required_date %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shipped_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :shipped_date %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          orders_path, :class => 'btn' %>
  </div>
<% end %>
